<%= form_for(@me) do |form| %>

<% if flash.notice %>
  <div class="alert alert-success">
    <%= flash.notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>


  <div>
  <div class="mb-3 mt-3">
    <%= form.label :balance %>
    <%= form.text_field :balance, class: "form-control" %>
  </div>

  <div class="mb-3 form-check p-0">
    <%= form.button id: "money_save", class: "btn btn-primary", 'data-disable-with': "Saving...", name: 'commit' do %>
      <i class="far fa-save"></i> add money
    <% end %>
  </div>
<% end %>
